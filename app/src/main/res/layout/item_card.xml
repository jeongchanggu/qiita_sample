<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="5dp"
    >
    <RelativeLayout
        android:id="@+id/itemCardRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_card"
        >

        <TextView
            android:id="@+id/itemCardUserNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="9dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="ItemCardFragment"
            android:ellipsize="end"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/itemCardImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/itemCardTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/itemCardImageView"
            android:layout_marginStart="102dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp"
            tools:text="TitleHere" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="115dp"
            android:adjustViewBounds="false"
            android:src="@drawable/ic_favorite_black_24dp"
            android:tint="#999999" />

        <TextView
            android:id="@+id/itemCardSuggestTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="133dp"
            android:textSize="12sp"
            tools:text="1234" />

    </RelativeLayout>

</android.support.v7.widget.CardView>